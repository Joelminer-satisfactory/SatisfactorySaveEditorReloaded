<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SatisfactorySaveEditorReloaded.MainPage">

    <ScrollView>
		<Grid x:Name ="MainGrid">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="95*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="1*"/>
				<RowDefinition Height="70"/>
				<RowDefinition Height="70"/>
				<RowDefinition Height="70"/>
			</Grid.RowDefinitions>
			<Button 
				x:Name="button"
				Text="Add item"
				VerticalOptions="Center"
				HorizontalOptions="Center"
				Clicked="OnButtonClicked"
				Grid.Row="1"
				Grid.Column="1"
				ToolTipProperties.Text="Click to add a new item to the treeview &#xD;&#xA;The level can be changed with the slider"/>
			<Label
				x:Name="Slider_Value"
				Text="0"
				Grid.Row="2"
				HorizontalTextAlignment="Center"
				VerticalTextAlignment="Start"
				Grid.Column="1"
				Margin="0,-10,0,0"/>
			<Entry
				x:Name="node_name"
				Placeholder="Enter the node name here"
				Grid.ColumnSpan="3"
				Grid.Row="3"/>
			<Slider
				x:Name="slider"
				Minimum="0"
				Maximum="10"
				Grid.Row="2"
				ValueChanged="OnValueChanged"
				Grid.Column="1"
				ToolTipProperties.Text="0"/>
		</Grid>
    </ScrollView>

</ContentPage>
